---
import '../styles/global.css';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="h-full antialiased scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Richard Christiansen - Portfolio" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Richard Christiansen</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
	</head>
	<body class="bg-white dark:bg-zinc-950 text-gray-900 dark:text-gray-100 font-sans min-h-full flex flex-col">
        <Navbar />
		<main class="flex-grow pt-16"> 
			<slot />
		</main>
        <Footer />
	</body>
</html>

<style>
    :root {
        font-family: 'Inter', sans-serif;
    }
</style>
